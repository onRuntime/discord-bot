{
    "compilerOptions": {
        "target"                      : "ES6",
        "module"                      : "commonjs",
        "outDir"                      : "./build",
        "strict"                      : true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata"       : true,
        "experimentalDecorators"      : true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
    ]
}